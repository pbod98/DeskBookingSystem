@using DeskBookingSystem.ViewModels;
@model DeskViewModel

<form asp-action="EditLocation" method="post">
    <p>Edit desk @Model.DeskName in location @Model.LocationName</p>
    @Html.HiddenFor(m => m.DeskId)
    <div class="form-group">
        @Html.Label("Name")
        @Html.TextBoxFor(m => m.DeskName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DeskName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.Label("Description")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>